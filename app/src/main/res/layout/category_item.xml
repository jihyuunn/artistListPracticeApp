<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="280dp">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="250dp" app:srcCompat="@drawable/david"
            android:id="@+id/artistImage" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="DAVID HOCKNEY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/artistNameTxt" app:layout_constraintStart_toStartOf="@+id/artistImage"
            app:layout_constraintEnd_toEndOf="@+id/artistImage" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/artistImage" app:layout_constraintBottom_toBottomOf="@+id/artistImage"
            android:textSize="30sp" android:fontFamily="@font/archivo_black"
            android:textColor="#FFFFFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>